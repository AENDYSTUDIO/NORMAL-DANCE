#!/bin/sh
set -e

echo "[pre-commit] Running lint check..."
npm run lint || exit 1

echo "[pre-commit] Running type check..."
npm run type-check || exit 1

echo "[pre-commit] Running tests..."
npm test || exit 1

echo "[pre-commit] Running unified secret scan..."
bash scripts/hooks/pre-commit || exit 1

echo "[pre-commit] All checks passed!"
exit 0