{
  "name": "normaldance-enterprise",
  "version": "1.0.0",
  "description": "Enterprise Web3 Music Platform",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest --config jest.config.enterprise.js",
    "test:unit": "jest --config jest.config.enterprise.js tests/unit",
    "test:integration": "jest --config jest.config.enterprise.js tests/integration",
    "test:e2e": "playwright test",
    "test:coverage": "jest --config jest.config.enterprise.js --coverage",
    "test:watch": "jest --config jest.config.enterprise.js --watch",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "trivy fs .",
    "security:test": "node verify-security.js",
    "performance:test": "lighthouse http://localhost:3000 --output=json",
    "build:secure": "docker build -f Dockerfile.ultra-secure -t normaldance:ultra-secure .",
    "deploy:staging": "kubectl apply -f k8s/staging/",
    "deploy:production": "kubectl apply -f k8s/production/",
    "docs:build": "typedoc --out docs/api src",
    "docs:serve": "serve docs",
    "format": "prettier --write .",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^14.0.4",
    "@solana/web3.js": "^1.87.6",
    "@tanstack/react-virtual": "^3.0.1",
    "dompurify": "^3.0.7",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "next": "^14.0.4",
    "rate-limit-redis": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.4",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "lighthouse": "^11.4.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.{json,md}": ["prettier --write"]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}