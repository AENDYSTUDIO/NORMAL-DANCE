{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "src/app/api/**/*.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "crons": [
    {
      "path": "/api/recommendations",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/analytics",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cleanup",
      "schedule": "0 2 * * *"
    }
  ]
}