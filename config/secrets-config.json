{
  "environments": {
    "development": null,
    "staging": {
      "name": "Staging",
      "description": "Staging environment secrets for testing and pre-production",
      "secrets": {
        "NEXTAUTH_SECRET": {
          "type": "string",
          "required": true,
          "description": "NextAuth.js secret key for staging"
        },
        "DATABASE_URL": {
          "type": "string",
          "required": true,
          "description": "Database connection URL for staging"
        },
        "SOLANA_RPC_URL": {
          "type": "string",
          "required": true,
          "description": "Solana RPC URL for staging"
        },
        "REDIS_URL": {
          "type": "string",
          "required": true,
          "description": "Redis connection URL for staging"
        },
        "LOG_LEVEL": {
          "type": "string",
          "required": false,
          "description": "Logging level for staging",
          "default": "info"
        },
        "ANALYTICS_ENABLED": {
          "type": "boolean",
          "required": false,
          "description": "Enable analytics for staging",
          "default": "true"
        },
        "MONITORING_ENABLED": {
          "type": "boolean",
          "required": false,
          "description": "Enable monitoring for staging",
          "default": "true"
        },
        "SENTRY_DSN": {
          "type": "string",
          "required": false,
          "description": "Sentry DSN for error tracking"
        },
        "DATADOG_API_KEY": {
          "type": "string",
          "required": false,
          "description": "Datadog API key for monitoring"
        },
        "NODE_ENV": {
          "type": "string",
          "required": false,
          "description": "Node environment",
          "default": "staging"
        },
        "NEXTAUTH_URL": {
          "type": "string",
          "required": true,
          "description": "NextAuth URL for staging",
          "default": "https://staging.dnb1st.ru"
        },
        "JWT_SECRET": {
          "type": "string",
          "required": false,
          "description": "JWT secret key for staging"
        }
      }
    },
    "production": {
      "name": "Production",
      "description": "Production environment secrets for live deployment",
      "secrets": {
        "NEXTAUTH_SECRET": {
          "type": "string",
          "required": true,
          "description": "NextAuth.js secret key for production"
        },
        "DATABASE_URL": {
          "type": "string",
          "required": true,
          "description": "Database connection URL for production"
        },
        "SOLANA_RPC_URL": {
          "type": "string",
          "required": true,
          "description": "Solana RPC URL for production"
        },
        "REDIS_URL": {
          "type": "string",
          "required": true,
          "description": "Redis connection URL for production"
        },
        "LOG_LEVEL": {
          "type": "string",
          "required": false,
          "description": "Logging level for production",
          "default": "warn"
        },
        "ANALYTICS_ENABLED": {
          "type": "boolean",
          "required": false,
          "description": "Enable analytics for production",
          "default": "true"
        },
        "MONITORING_ENABLED": {
          "type": "boolean",
          "required": false,
          "description": "Enable monitoring for production",
          "default": "true"
        },
        "SENTRY_DSN": {
          "type": "string",
          "required": true,
          "description": "Sentry DSN for error tracking"
        },
        "DATADOG_API_KEY": {
          "type": "string",
          "required": true,
          "description": "Datadog API key for monitoring"
        },
        "GOOGLE_ANALYTICS_ID": {
          "type": "string",
          "required": false,
          "description": "Google Analytics tracking ID"
        },
        "MIXPANEL_TOKEN": {
          "type": "string",
          "required": false,
          "description": "Mixpanel token for analytics"
        },
        "NODE_ENV": {
          "type": "string",
          "required": false,
          "description": "Node environment",
          "default": "production"
        },
        "NEXTAUTH_URL": {
          "type": "string",
          "required": true,
          "description": "NextAuth URL for production",
          "default": "https://dnb1st.ru"
        },
        "JWT_SECRET": {
          "type": "string",
          "required": true,
          "description": "JWT secret key for production"
        },
        "ENCRYPTION_KEY": {
          "type": "string",
          "required": true,
          "description": "Encryption key for sensitive data"
        },
        "AWS_ACCESS_KEY_ID": {
          "type": "string",
          "required": false,
          "description": "AWS access key ID"
        },
        "AWS_SECRET_ACCESS_KEY": {
          "type": "string",
          "required": false,
          "description": "AWS secret access key"
        },
        "AWS_REGION": {
          "type": "string",
          "required": false,
          "description": "AWS region",
          "default": "us-east-1"
        },
        "CLOUDFLARE_API_TOKEN": {
          "type": "string",
          "required": false,
          "description": "Cloudflare API token"
        },
        "PINATA_API_KEY": {
          "type": "string",
          "required": false,
          "description": "Pinata API key for IPFS"
        },
        "PINATA_SECRET_API_KEY": {
          "type": "string",
          "required": false,
          "description": "Pinata secret API key"
        },
        "EMAIL_HOST": {
          "type": "string",
          "required": false,
          "description": "Email service host"
        },
        "EMAIL_PORT": {
          "type": "string",
          "required": false,
          "description": "Email service port",
          "default": "587"
        },
        "EMAIL_USER": {
          "type": "string",
          "required": false,
          "description": "Email service username"
        },
        "EMAIL_PASS": {
          "type": "string",
          "required": false,
          "description": "Email service password"
        }
      }
    }
  },
  "validation": {
    "rules": {
      "minLength": 8,
      "requireUppercase": true,
      "requireLowercase": true,
      "requireNumbers": true,
      "requireSpecialChars": true,
      "noCommonPasswords": true,
      "noPersonalInfo": true
    }
  },
  "rotation": {
    "schedule": "0 2 * * *",
    "retention": 30,
    "notifications": true
  }
}