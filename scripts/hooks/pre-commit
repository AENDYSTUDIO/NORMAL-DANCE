#!/usr/bin/env bash
set -euo pipefail

echo "[pre-commit] Running truffleHog and git-secrets..."
FOUND=0

if command -v trufflehog >/dev/null 2>&1; then
  if trufflehog git --since-commit HEAD~50 --branch HEAD --json . | grep -q 'SourceMetadata'; then FOUND=1; fi
else
  echo "trufflehog not installed, skipping" >&2
fi

if command -v git-secrets >/dev/null 2>&1; then
  git secrets --scan || FOUND=1
else
  echo "git-secrets not installed, skipping" >&2
fi

if [ $FOUND -ne 0 ]; then
  echo "[pre-commit] Secrets detected. Commit blocked." >&2
  exit 1
fi
echo "[pre-commit] OK"
exit 0

